<!-- This approach involves including the version number in an HTTP header. For example, a consumer might set the api-version header to 1 in order to access the version 1 endpoint, or set it to 2 in order to access the version 2 endpoint. -->

    public class UsersController : ApiController
    {
        public HttpResponseMessage Get()
        {
            var version = Request.Headers.GetValues("api-version").FirstOrDefault();
            switch (version)
            {
                case "1":
                    //Return version 1 of the users
                    break;
                case "2":
                    //Return version 2 of the users
                    break;
                default:
                    //Return latest version of the users
                    break;
            }
        }
    }
